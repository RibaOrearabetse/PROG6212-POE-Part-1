@{
    ViewData["Title"] = "Dashboard";
}

<h2>Dashboard</h2>

<div class="row">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h5 class="card-title">Total Claims</h5>
                <h2>147</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <h5 class="card-title">Pending</h5>
                <h2>23</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h5 class="card-title">Approved</h5>
                <h2>98</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-danger">
            <div class="card-body">
                <h5 class="card-title">Rejected</h5>
                <h2>26</h2>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h4>Recent Claims</h4>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Claim ID</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>4</td>
                        <td>2024-02-13</td>
                        <td><span class="status-pending">Pending</span></td>
                        <td>$1,440.00</td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>2024-01-26</td>
                        <td><span class="status-rejected">Rejected</span></td>
                        <td>$560.00</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>2024-01-19</td>
                        <td><span class="status-approved">Approved</span></td>
                        <td>$1,050.00</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-6">
        <h4>Quick Actions</h4>
        <div class="list-group">
            <a href="@Url.Action("Create", "Claim")" class="list-group-item list-group-item-action">
                <strong>Submit New Claim</strong><br>
                <small>Create a new monthly claim submission</small>
            </a>
            <a href="@Url.Action("Index", "Approval")" class="list-group-item list-group-item-action">
                <strong>Review Approvals</strong><br>
                <small>Process pending claim approvals</small>
            </a>
            <a href="@Url.Action("Index", "User")" class="list-group-item list-group-item-action">
                <strong>Manage Users</strong><br>
                <small>Add or edit system users</small>
            </a>
        </div>
    </div>
</div>
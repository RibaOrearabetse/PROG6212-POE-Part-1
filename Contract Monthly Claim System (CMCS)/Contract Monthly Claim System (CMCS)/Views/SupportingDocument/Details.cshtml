@model Contract_Monthly_Claim_System__CMCS_.Models.SupportingDocument
@{
    ViewData["Title"] = "Document Details";
}

<h2>Document Details</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Document ID</dt>
            <dd class="col-sm-10">@Model.DocumentID</dd>

            <dt class="col-sm-2">File Name</dt>
            <dd class="col-sm-10">@Model.FileName</dd>

            <dt class="col-sm-2">File Path</dt>
            <dd class="col-sm-10">@Model.FilePath</dd>

            <dt class="col-sm-2">Upload Date</dt>
            <dd class="col-sm-10">@Model.UploadDate.ToShortDateString()</dd>

            <dt class="col-sm-2">Claim ID</dt>
            <dd class="col-sm-10">@Model.ClaimID</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <button type="button" class="btn btn-success">Download</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
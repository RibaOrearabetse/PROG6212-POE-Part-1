@model IEnumerable<Contract_Monthly_Claim_System__CMCS_.Models.SupportingDocument>
@{
    ViewData["Title"] = "Supporting Documents";
}

<h2>Supporting Documents</h2>

<p>
    <a asp-action="Upload" class="btn btn-primary">Upload Document</a>
</p>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Document ID</th>
                <th>File Name</th>
                <th>Upload Date</th>
                <th>Claim ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DocumentID</td>
                    <td>@item.FileName</td>
                    <td>@item.UploadDate.ToShortDateString()</td>
                    <td>@item.ClaimID</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.DocumentID" class="btn btn-info btn-sm">Details</a>
                            <button type="button" class="btn btn-success btn-sm">Download</button>
                            <button type="button" class="btn btn-danger btn-sm">Delete</button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
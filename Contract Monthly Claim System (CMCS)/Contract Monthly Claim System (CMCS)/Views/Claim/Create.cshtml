@{
    ViewData["Title"] = "Submit Claim";
}

<h2>Submit New Claim</h2>

<div class="row">
    <div class="col-md-8">
        <form method="get">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label for="ClaimDate" class="form-label">Claim Date</label>
                        <input type="date" class="form-control" id="ClaimDate" name="ClaimDate" required disabled>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label for="HoursWorked" class="form-label">Hours Worked</label>
                        <input type="number" step="0.1" class="form-control" id="HoursWorked" name="HoursWorked" required disabled>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label for="HourlyRate" class="form-label">Hourly Rate ($)</label>
                        <input type="number" step="0.01" class="form-control" id="HourlyRate" name="HourlyRate" required disabled>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label for="TotalAmount" class="form-label">Total Amount ($)</label>
                        <input type="number" step="0.01" class="form-control" id="TotalAmount" name="TotalAmount" readonly disabled>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label for="ClaimStatus" class="form-label">Status</label>
                <select class="form-select" id="ClaimStatus" name="ClaimStatus" disabled>
                    <option value="Pending" selected>Pending</option>
                    <option value="Submitted">Submitted</option>
                </select>
            </div>

            <div class="form-group">
                <button type="button" class="btn btn-primary">Submit Claim</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>


@model IEnumerable<Contract_Monthly_Claim_System__CMCS_.Models.Role>
@{
    ViewData["Title"] = "Roles";
}

<h2>Roles</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Role</a>
</p>

<script>
    function confirmDelete(roleId) {
        if (confirm('Are you sure you want to delete this role? (This is a demo; no data will be deleted)')) {
            alert('Delete request received for Role ID: ' + roleId + '. In a real application, this would delete the record.');
        }
    }
</script>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Role ID</th>
                <th>Role Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.RoleID</td>
                    <td>@item.RoleName</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.RoleID" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.RoleID" class="btn btn-warning btn-sm">Edit</a>
                            <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete(@item.RoleID)">Delete</button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
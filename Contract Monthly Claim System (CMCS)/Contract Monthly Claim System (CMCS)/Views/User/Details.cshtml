@model Contract_Monthly_Claim_System__CMCS_.Models.User
@{
    ViewData["Title"] = "User Details";
}

<h2>User Details</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">User ID</dt>
            <dd class="col-sm-10">@Model.UserID</dd>

            <dt class="col-sm-2">First Name</dt>
            <dd class="col-sm-10">@Model.FirstName</dd>

            <dt class="col-sm-2">Last Name</dt>
            <dd class="col-sm-10">@Model.LastName</dd>

            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.Email</dd>

            <dt class="col-sm-2">Contact Number</dt>
            <dd class="col-sm-10">@Model.ContactNumber</dd>

            <dt class="col-sm-2">Role ID</dt>
            <dd class="col-sm-10">@Model.RoleID</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.UserID" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>